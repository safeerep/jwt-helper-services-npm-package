{
  "compilerOptions": {
    "target": "ES2022", 
    "module": "commonjs", 
    "esModuleInterop": true ,
    "forceConsistentCasingInFileNames": true ,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "skipLibCheck": true ,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
